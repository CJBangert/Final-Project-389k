        </div>
       
        <button type="submit">Delete Concert </button>
  </form>
</article>


<u1 id="concertList">

{{#each data}}

    <article>
        <div>

          <p name="concerts"> {{this.lineup}} <br> Date: {{this.date}} <br> Price: ${{ this.price}} before fees <br> Location: {{this.location}} <br> Friends Going: {{this.friends_going}} <br> Concert ID: {{this.id}}  <p>          

        </div>
    </article>
{{/each}}