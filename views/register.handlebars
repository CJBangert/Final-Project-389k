<h1>Register</h1>
<article>
    <form method="POST" action="/api/register">
        <div>
            <label>Username:</label>
            <input type="text" name="username" size="50" placeholder="username">
        </div>
         <div>
            <label>Password</label>
            <input type="password" name="password" size="50" placeholder="password">
        </div>
       <div>
            <label>Sex</label>
            <input type="text" name="Sex" size="50" placeholder="sex">
        </div>
         <div >
            <label>Music Interests (enter up to 10):</label>
            <input type="text" name="music_interests" size="50" placeholder="Genre1 Genre2 Genre3 (seperated by spaces)">
        </div>

        <button type="submit">Register </button>
    </form>
</article>
